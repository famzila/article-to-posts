{
    "manifest_version": 3,
    "name": "ArticleToPosts",
    "version": "1.0",
    "description": "Empower your content creation! Turn your articles into captivating social media posts with our AI-powered Chrome extension.",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "19": "icons/icon19.png",
            "32": "icons/icon32.png",
            "38": "icons/icon38.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}